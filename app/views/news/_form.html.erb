<%= form_with(model: news, class: "bg-white p-6 rounded-lg shadow-md max-w-lg mx-auto border-t-4 border-cyan-500 shadow-lg rounded-lg p-6 space-y-4 my-5") do |form| %>
<% if news.errors.any? %>
<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
  <h2 class="font-semibold"><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>
  <ul class="list-disc pl-5 mt-2">
    <% news.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="mb-4">
  <%= form.label :content, class: "block font-semibold mb-2" %>
  <%= form.text_area :content, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-600" %>
</div>

<div class="text-center">
  <%= form.submit "Submit", class: "bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-2 px-4 rounded-lg transition ease-in-out duration-300" %>
</div>
<% end %>