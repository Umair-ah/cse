<h1 class="page-title">Administrations</h1>

<div class="mt-16 text-center">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
    <% @administrations.each do |administration| %>
      <!-- Leader Card -->
      <div class="flex flex-col items-center">
        <% if administration.image.attached? %>
          <%= image_tag(administration.image, alt: administration.name, class: "w-48 h-48 object-cover rounded-full shadow-md mb-4") %>
        <% else %>
          <div class="w-48 h-48 bg-gray-200 rounded-full mb-4 flex items-center justify-center">
            <span class="text-gray-500">No Image</span>
          </div>
        <% end %>
        <h3 class="text-xl font-semibold text-gray-800 mb-1"><%= administration.name %></h3>
        <p class="text-gray-600"><%= administration.degree %></p>
        <b class="text-gray-600"><%= administration.position %></b>
        <p class="text-gray-600"><%= administration.department %></p>
      </div>
    <% end %>
  </div>
</div>

<div class="button-container mt-10">
  <%= link_to "New Administration", new_administration_path, class: "new-admin-button" %>
</div>

<style>
  .page-title {
    font-size: 2.5rem; /* Larger font size for emphasis */
    text-align: center;
    margin-bottom: 40px; /* Increased spacing */
    color: #333;
    font-weight: bold; /* Bold title */
  }

  .new-admin-button {
    display: inline-block;
    margin-top: 20px;
    padding: 12px 24px; /* Larger padding for a more substantial button */
    background-color: #007aff; /* Apple-like blue color */
    color: #fff;
    text-decoration: none;
    border-radius: 8px; /* Rounded corners */
    text-align: center;
    transition: background-color 0.3s ease, transform 0.2s ease; /* Smooth transition effects */
    font-weight: 600; /* Bold text */
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
  }

  .new-admin-button:hover {
    background-color: #0056b3; /* Darker shade on hover */
    transform: translateY(-2px); /* Slight lift effect on hover */
  }

  .button-container {
    text-align: center;
  }
</style>
