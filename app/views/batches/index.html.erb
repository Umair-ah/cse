<div class="relative top-20 max-w-5xl mx-auto p-8 text-center">
  <% if current_user %>
  <%= link_to "Upload Guides", upload_guides_path, class: "inline-block bg-cyan-600 text-white py-2 px-6 rounded-lg shadow-lg hover:bg-cyan-700 transition duration-200 mb-3" %>
  <% end %>
  <!-- Title -->
  <h1 class="text-4xl font-semibold text-gray-900 mb-10">Batches</h1>

  <%= form_with url: search_path, method: :post do |f| %>
  <%= f.search_field :query, placeholder: "Enter USN", class:"text-cyan-600 focus:ring-cyan-500 focus:border-cyan-500 transition:ease-out duration-300 text-white p-2 border-cyan-500 placeholder-cyan-600" %>
  <%= f.submit "Submit", class:"bg-cyan-600 hover:bg-cyan-500 transition:ease-out duration-300 text-white p-2 hover:cursor-pointer" %>
  <% end %>

  <div id="usn_query">

  </div>

  <!-- Batches List -->
  <div id="batches" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 mb-12">
    <% @batches.each do |batch| %>
    <div class="p-6 rounded-lg shadow-lg bg-white transition-transform transform hover:scale-105 border-t-4 border-cyan-500 shadow-lg rounded-lg p-6 space-y-4 my-5 transition:ease-out duration-700">
      <h2 class="text-2xl font-medium text-gray-700 mb-4"><%= batch.year %>CS</h2>

      <div class="flex flex-col items-center">
        <%= link_to "Show this batch", batch, class: "text-cyan-600 hover:text-cyan-400 font-medium text-lg" %>
        <% if current_user %>
        <%= link_to "Edit this batch", edit_batch_path(batch), class: "text-red-600 hover:text-red-400 font-medium text-lg" %>
        <% end %>
      </div>

    </div>
    <% end %>
  </div>

  <% if current_user %>
  <%= link_to "New batch +", new_batch_path, class: "inline-block bg-cyan-600 text-white py-3 px-8 rounded-lg shadow-lg hover:bg-cyan-700 transition duration-200" %>
  <% end %>
</div>