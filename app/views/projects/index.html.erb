<div class="relative top-20 px-8 py-10 bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-medium text-gray-800 mb-6 text-center">Students of <b><%= Guide.find(session[:guide_id]).name %></b></h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @students_of_guide.each do |student| %>
      <div class="border-t-4 border-red-500 shadow-lg rounded-lg p-6 space-y-4 my-5 hover:shadow-xl transition duration-300">
        <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= student.name %></h2>
        <p class="text-gray-600 mb-4">USN: <%= student.usn %></p>

        <% if student.projects.present? %>
        <% student.projects.each do |project| %>
        <%= link_to "#{project.title}", edit_project_path(project), class: "inline-block px-4 py-2 bg-cyan-600 text-white font-semibold rounded-md hover:bg-cyan-700 transition duration-300" %>
        <p class="text-red-600 mb-4">Total: <%= project.total %></p>
        <% end %>
        <% else %>
        <p class="text-red-600 font-bold">Not Assigned!</p>
        <% end %>

      </div>
      <% end %>
    </div>
  </div>
</div>