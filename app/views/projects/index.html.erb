<div class="relative top-20 px-8 py-10 bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Students of Guide</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @students_of_guide.each do |student| %>
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition duration-300">
        <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= student.name %></h2>
        <p class="text-gray-600 mb-4">USN: <%= student.usn %></p>
        <%= link_to "Check", edit_project_path(student), 
          class: "inline-block px-4 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition duration-300" %>
      </div>
      <% end %>
    </div>
  </div>
</div>