<div class="relative top-20 px-8 py-10 bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <div class="grid place-items-center">
      <%= link_to "back", projects_path, class:"text-red-700" %>
    </div>
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Enter Marks</h1>

    <%= form_with(model: @project, local: true, class: "space-y-10") do |f| %>
    <!-- Section 1 -->
    <div>
      <h2 class="text-lg font-semibold text-gray-700 mb-4">1. Identification of problem and detailed analysis (05 Marks)</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <%= f.label :mark1, "R1", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.number_field :mark1, class: "w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-cyan-500", step: 0.1 %>
          <% if @project.errors[:mark1].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark1].first %></p>
          <% end %>
        </div>
        <div>
          <%= f.label :mark2, "R2", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.number_field :mark2, class: "w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-cyan-500", step: 0.1 %>
          <% if @project.errors[:mark2].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark2].first %></p>
          <% end %>
        </div>
      </div>
    </div>
    <hr />

    <!-- Section 2 -->
    <div>
      <h2 class="text-lg font-semibold text-gray-700 mb-4">2. Study of the existing system and feasibility of project proposal (10 Marks)</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <%= f.label :mark3, "R1", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.number_field :mark3, class: "w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-cyan-500", step: 0.1 %>
          <% if @project.errors[:mark3].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark3].first %></p>
          <% end %>
        </div>
        <div>
          <%= f.label :mark4, "R2", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.number_field :mark4, class: "w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-cyan-500", step: 0.1 %>
          <% if @project.errors[:mark4].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark4].first %></p>
          <% end %>
        </div>
      </div>
    </div>

    <hr />
    <!-- Section 3 -->
    <div>
      <h2 class="text-lg font-semibold text-gray-700 mb-4">3. Objectives and Methodology of the proposed system (10 Marks)</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <%= f.label :mark5, "R1", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.number_field :mark5, class: "w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-cyan-500", step: 0.1 %>
          <% if @project.errors[:mark5].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark5].first %></p>
          <% end %>
        </div>
        <div>
          <%= f.label :mark6, "R2", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.number_field :mark6, class: "w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-cyan-500", step: 0.1 %>
          <% if @project.errors[:mark6].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark6].first %></p>
          <% end %>
        </div>
      </div>
    </div>

    <hr />
    <!-- Section 4 -->
    <div>
      <h2 class="text-lg font-semibold text-gray-700 mb-4">4. Presentation (20 Marks)</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <%= f.label :mark7, "R1", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.number_field :mark7, class: "w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-cyan-500", step: 0.1 %>
          <% if @project.errors[:mark7].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark7].first %></p>
          <% end %>
        </div>
        <div>
          <%= f.label :mark8, "R2", class: "block text-gray-700 font-medium mb-1" %>
