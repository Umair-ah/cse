          <% if @project.errors[:mark8].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark8].first %></p>
          <% end %>
        </div>
      </div>
    </div>

    <hr />

    <!-- Section 5 -->
    <div>
      <h2 class="text-lg font-semibold text-gray-700 mb-4">5. Project Report (05 Marks)</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <%= f.label :mark9, "R1", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.number_field :mark9, class: "w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-cyan-500", step: 0.1 %>
          <% if @project.errors[:mark9].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark9].first %></p>
          <% end %>
        </div>
        <div>
          <%= f.label :mark10, "R2", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.number_field :mark10, class: "w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-cyan-500", step: 0.1 %>
          <% if @project.errors[:mark10].present? %>
          <p class="text-sm text-red-600 mt-1"><%= @project.errors[:mark10].first %></p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <%= f.submit "Save", class: "w-full sm:w-auto bg-cyan-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-cyan-700 transition duration-300" %>
    </div>
    <% end %>
  </div>
  <div class="grid place-items-center">
    <%= link_to "back", projects_path, class:"text-red-700 mt-3" %>
  </div>
</div>